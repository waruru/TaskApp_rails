<div class="container mx-auto">
  <div class="my-6">
    <h2 class="text-4xl text-center font-bold">所属ワークスペース一覧</h2>
  </div>

  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
    <% @workspaces.each do |workspace| %>
      <div class="col-span-1 h-24 rounded-md border border-gray-600" style="background-color: <%= workspace.color %>;">
        <%= link_to workspace, class: "block h-full p-2" do %>
          <p class="text-white font-bold"><%= workspace.name %></p>
        <% end %>
      </div>
    <% end %>
  </div>
  <p class="mt-4 text-right"><%= link_to "ワークスペースを作成", new_workspace_path, class: "underline" %></p>
</div>
