<div class="container mx-auto">
  <div class="my-6">
    <h2 class="text-4xl text-center font-bold">所属ワークスペース一覧</h2>
  </div>

  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
    <% @workspaces.each do |workspace| %>
      <div class="col-span-1 h-24 p-2 rounded-md border border-green-600 bg-green-400">
        <p><%= link_to workspace.name, workspace %></p>
      </div>
    <% end %>
  </div>
  <p class="mt-4 text-right"><%= link_to "ワークスペースを作成", new_workspace_path, class: "underline" %></p>
</div>
