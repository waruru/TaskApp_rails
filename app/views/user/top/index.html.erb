<div class="container mx-auto">
  <div class="mt-4">
    <h3 class="font-bold">ボード</h3>
    <div class="mt-1 p-3 rounded bg-gray-300 shadow shadow-gray-500">
      <ul class="flex overflow-x-auto space-x-4">
        <% @boards.each do |board| %>
          <li>
            <%= link_to board, class: "group block h-24 min-w-[15rem] p-2 rounded-md border border-gray-600", style: "background-color: #{board.color};" do %>
              <p class="font-bold text-white group-hover:underline"><%= board.name %></p>
              <p class="text-sm"><%= board.workspace.name %></p> 
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>

  <div class="mt-4">
    <h3 class="font-bold">ワークスペース</h3>
    <div class="mt-1 p-3 rounded bg-gray-300 shadow shadow-gray-500">
      <ul class="flex overflow-x-auto space-x-4">
        <% @workspaces.each do |workspace| %>
          <li><%= link_to workspace.name, workspace, class: "block h-24 min-w-[15rem] p-2 rounded-md border border-gray-600 font-bold text-white hover:underline", style: "background-color: #{workspace.color};" %></li>
        <% end %>
      </ul>
    </div>
    <p class="m-2 text-right underline"><%= link_to "ワークスペースを作成", new_workspace_path %></p>
    <p class="m-2 text-right underline"><%= link_to "ワークスペースへの招待一覧", workspace_join_request_index_path %></p>
  </div>
</div>
