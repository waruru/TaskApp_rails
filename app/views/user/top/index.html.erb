<div class="container mx-auto">
  <div class="mt-4">
    <h3>ボード</h3>
    <div class="p-3 rounded bg-gray-300">
      <ul class="flex overflow-x-auto space-x-4">
        <% @boards.each do |board| %>
          <li>
            <%= link_to(board, class: "block h-24 min-w-[15rem] p-2 rounded-md border border-green-600 bg-green-400") do %>
              <p><%= board.name %></p>
              <p class="text-sm text-gray-600"><%= board.workspace.name %></p> 
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>

  <div class="mt-4">
    <h3>ワークスペース</h3>
    <div class="p-3 rounded bg-gray-300">
      <ul class="flex overflow-x-auto space-x-4">
        <% @workspaces.each do |workspace| %>
          <li><%= link_to workspace.name, workspace, class: "block h-24 min-w-[15rem] p-2 rounded-md border border-green-600 bg-green-400" %></li>
        <% end %>
      </ul>
    </div>
    <p class="m-2 text-right underline"><%= link_to "ワークスペースを作成", new_workspace_path %></p>
    <p class="m-2 text-right underline"><%= link_to "ワークスペースへの招待一覧", workspace_join_request_index_path %></p>
  </div>
</div>
